@page "{id:int}"
@using System.Linq
@model DetailsModel
@{
    ViewData["Title"] = "Detalhes do Local";
}

<div class="place-detail">
    <div class="detail-gallery">
        @if (Model.Place.ImageFiles.Any())
        {
            @foreach (var file in Model.Place.ImageFiles)
            {
                <img src="@Url.Content($"~/uploads/{file}")" alt="@Model.Place.Name" />
            }
        }
        else
        {
            <img src="/images/placeholder.png" alt="Imagem indisponível" />
        }
    </div>
    <div class="detail-content">
        <strong>@Model.Place.Name</strong>
        <div class="rating">Avaliação: @Model.Place.Rating ★</div>
        <div>@Model.Place.Address</div>
        <p>@Model.Place.Description</p>
        <small>Recursos: @Model.Place.Features</small>
        <p class="detail-actions"><a href="/">Voltar</a></p>
    </div>
</div>
